<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Unit1Activity">

    <include
        android:id="@+id/actionBar"
        layout="@layout/action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/actionBar"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="211dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">

                <ImageView
                    android:id="@+id/imageViewTop0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:src="@drawable/cat_head" />

                <ImageView
                    android:id="@+id/imageViewTop1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:src="@drawable/cat_middle" />

                <ImageView
                    android:id="@+id/imageViewTop2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:src="@drawable/cat_tail" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">

                <ImageView
                    android:id="@+id/imageViewTop3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:src="@drawable/dog_head" />

                <ImageView
                    android:id="@+id/imageViewTop4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:src="@drawable/dog_middle" />

                <ImageView
                    android:id="@+id/imageViewTop5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:src="@drawable/dog_tail" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">

                <ImageView
                    android:id="@+id/imageViewTop6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:src="@drawable/hen_head" />

                <ImageView
                    android:id="@+id/imageViewTop7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:src="@drawable/hen_middle" />

                <ImageView
                    android:id="@+id/imageViewTop8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:src="@drawable/hen_tail" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="16dp">

                <TableLayout
                    android:id="@+id/letterGrid"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textAlignment="center">

                    <TableRow
                        android:id="@+id/letterRow0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:layout_weight="1"
                        android:gravity="center">

                        <Button
                            android:id="@+id/letter_0"
                            style="@style/Widget.AppCompat.Button.Colored"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_margin="12dp"
                            android:background="@drawable/btn_letters"
                            android:fontFamily="@font/comicneue_regular"
                            android:text="p"
                            android:textAllCaps="false"
                            android:textSize="36sp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/letter_1"
                            style="@style/Widget.AppCompat.Button.Colored"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_margin="12dp"
                            android:background="@drawable/btn_letters"
                            android:fontFamily="@font/comicneue_regular"
                            android:text="i"
                            android:textAllCaps="false"
                            android:textSize="36sp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/letter_2"
                            style="@style/Widget.AppCompat.Button.Colored"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_margin="12dp"
                            android:background="@drawable/btn_letters"
                            android:fontFamily="@font/comicneue_regular"
                            android:text="g"
                            android:textAllCaps="false"
                            android:textSize="36sp"
                            android:textStyle="bold" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/letterRow1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:gravity="center">

                        <Button
                            android:id="@+id/letter_3"
                            style="@style/Widget.AppCompat.Button.Colored"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_margin="12dp"
                            android:background="@drawable/btn_letters"
                            android:fontFamily="@font/comicneue_regular"
                            android:text="f"
                            android:textAllCaps="false"
                            android:textSize="36sp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/letter_4"
                            style="@style/Widget.AppCompat.Button.Colored"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_margin="12dp"
                            android:background="@drawable/btn_letters"
                            android:fontFamily="@font/comicneue_regular"
                            android:text="o"
                            android:textAllCaps="false"
                            android:textSize="36sp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/letter_5"
                            style="@style/Widget.AppCompat.Button.Colored"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_margin="12dp"
                            android:background="@drawable/btn_letters"
                            android:fontFamily="@font/comicneue_regular"
                            android:text="x"
                            android:textAllCaps="false"
                            android:textSize="36sp"
                            android:textStyle="bold" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/letterRow2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:layout_weight="1"
                        android:gravity="center">

                        <Button
                            android:id="@+id/letter_6"
                            style="@style/Widget.AppCompat.Button.Colored"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_margin="12dp"
                            android:background="@drawable/btn_letters"
                            android:fontFamily="@font/comicneue_regular"
                            android:text="r"
                            android:textAllCaps="false"
                            android:textSize="36sp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/letter_7"
                            style="@style/Widget.AppCompat.Button.Colored"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_margin="12dp"
                            android:background="@drawable/btn_letters"
                            android:fontFamily="@font/comicneue_regular"
                            android:text="a"
                            android:textAllCaps="false"
                            android:textSize="36sp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/letter_8"
                            style="@style/Widget.AppCompat.Button.Colored"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_margin="12dp"
                            android:background="@drawable/btn_letters"
                            android:fontFamily="@font/comicneue_regular"
                            android:text="m"
                            android:textAllCaps="false"
                            android:textSize="36sp"
                            android:textStyle="bold" />
                    </TableRow>
                </TableLayout>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageViewTest1"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="4"
                        android:background="@android:color/transparent"
                        app:srcCompat="@drawable/dog_head" />

                    <EditText
                        android:id="@+id/editLetter1"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:cursorVisible="false"
                        android:ems="10"
                        android:inputType="none"
                        android:textAlignment="center" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageViewTest2"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="4"
                        android:background="@android:color/transparent"
                        app:srcCompat="@drawable/dog_middle" />

                    <EditText
                        android:id="@+id/editLetter2"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:cursorVisible="false"
                        android:ems="10"
                        android:inputType="none"
                        android:textAlignment="center" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageViewTest3"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="start"
                        android:layout_weight="4"
                        android:background="@android:color/transparent"
                        app:srcCompat="@drawable/dog_tail" />

                    <EditText
                        android:id="@+id/editLetter3"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:cursorVisible="false"
                        android:ems="10"
                        android:inputType="none"
                        android:textAlignment="center" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>